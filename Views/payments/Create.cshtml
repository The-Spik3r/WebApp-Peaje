@model Peajes.Models.payment.payment

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>payment</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="matricula" class="control-label"></label>
                <input asp-for="matricula" class="form-control" value="@Model.matricula" />
                <span asp-validation-for="matricula" class="text-danger"></span>

                <label asp-for="IdVehiculo" class="control-label"></label>
                <input asp-for="IdVehiculo" class="form-control" value="@Model.IdVehiculo" />
                <span asp-validation-for="IdVehiculo" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="pagado" /> @Html.DisplayNameFor(model => model.pagado)
                </label>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>



<div>
